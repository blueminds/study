.video-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
}

.video-container video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100% !important;
    height: 100%;
}


.message
  position: absolute
  width: 100%
  margin-left: 0
  margin-top: 250px
  color: white
  font-size: 40px
  text-align: center
  font-weight: bold
  z-index: 10

.search-filter
  position: absolute
  width: 100%
  background: rgba(0,0,0,0.6)
  padding-top:30px
  padding-bottom: 30px
  z-index: 20
  margin-left: 0
  margin-top: 450px
  color: gray

.filter-input
  display: inline-block
  float: left
  height: 26px
  line-height: 40px

.filter-input input
  border: 0
  border-right: 1px solid #c4c4c4
  text-align: center

.btn-search
  border-color: #ff5a5f;
  border-bottom-color: #e00007;
  background-color: #ff5a5f;
  color: #fff;
  height: 46px
  padding: 9px 27px;
  font-size: 16px;
  text-align: center;
  vertical-align: middle;
  font-weight: bold;
  line-height: 1.43;
  -webkit-user-select: none
  cursor: pointer;



#search-result
  background: #f5f5f5
  position: absolute;
  display: none

