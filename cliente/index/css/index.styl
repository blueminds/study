body
  background: #f5f5f5

input
  border-radius: 0px !important

.row
  margin-right: 0 !important;

.video-container
  width: 100%;
  position: relative;


.video-background
  width: 100%

.card
  width: 90%
  margin: 0 auto
  border: 1px solid #e5e5e5;
  border-radius: .25rem;
  padding: 10px
  margin-bottom: 20px

.src-btn
  background-color: #ff5a5f
  border-color: #ff5a5f
  border-radius: 0px !important

.bg-search
  padding: 10px 15px;
  background: #fff;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.25);
  box-shadow: 0 1px 2px rgba(0,0,0,0.25);
  margin-top: 20px
  margin-bottom: 20px

#top-bar
  position: absolute
  margin-top: 1%
  width: 100%


#logo
  color: white
  font-weight: bold
  font-size: 22px
  margin-left: 15px

#msg
    position: absolute
    margin-top: 20%
    width: 100%
    color: #fff;
    font-size: 40px;
    text-align: center;
    font-weight: bold;

#search-bar
  position: absolute
  margin-top: 40%
  width: 100%
  background-color: red
  z-index: 10


  background: rgba(0,0,0,0.6);
  padding-top: 30px;
